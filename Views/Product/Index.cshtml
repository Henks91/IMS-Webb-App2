@model IEnumerable<PäronWebbApp.Models.Product>

@{
    ViewData["Title"] = "Produkter";
}

<h1>Produkter</h1>
<hr class="my-4">
<p>
    <a asp-action="Create">Lägg till ny produkt</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @item.Created.Date.ToShortDateString()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Redigera</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Detaljer</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Ta bort</a>
            </td>
        </tr>
}
    </tbody>
</table>
