@model IEnumerable<PäronWebbApp.Models.InventoryBalance>

@{
    ViewData["Title"] = "Hem";
}

<div class="text-center">
    <h1 class="display-4">Välkommen till Päron Inventory Flow</h1>
</div>
<br />
<br />
<h1>Aktivt lagersaldo</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["WarehouseSortParam"]">
                    @Html.DisplayNameFor(model => model.Warehouse.City)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ProductSortParam"]">
                    @Html.DisplayNameFor(model => model.Product.ProductName)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TotalAmountSortParam"]">
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Warehouse.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
            </tr>
        }
    </tbody>
</table>

